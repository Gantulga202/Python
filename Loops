#===========================================================
#Array loop
fruits = ["apple", "banana", "cherry", "kiwi", "mango"]

for friut in fruits:
    print(friut)

#===========================================================
#string loop
print("===========================================================")
for hahaha in "banana":
    print(hahaha)

#===========================================================
#break
print("===========================================================")
fruits = ["apple", "banana", "cherry", "kiwi", "mango"]

for friut in fruits:
    print(friut)
    if friut == "cherry":
        break

