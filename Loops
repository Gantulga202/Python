#Exercise
print("===========================================================")
Students = ["Anu", "Bat", "Erka", "Dorj", "Gantulga", "Sonio", "Zoloo", "Batu"]

for findMe in Students:
    print(findMe)
    if findMe == "Gantulga":
        break

#===========================================================
print("===========================================================")
fruits = ["apple", "banana", "cherry", "kiwi", "mango"]

for friut in fruits:
    if friut == "cherry":
        continue
    print(friut)

#===========================================================
print("===========================================================")
Family = ["Ganaa", "Nonna", "Ovoo", "uduri", "Mimi"]

for algasah in Family:
    if algasah == "Ovoo":
        continue
    print(algasah)
